# Fallback: Public RPC (last resort)
NEXT_PUBLIC_SOLANA_RPC_PRIMARY=https://api.mainnet-beta.solana.com

# Legacy RPC URL (for backwards compatibility)
NEXT_PUBLIC_RPC_URL=https://api.mainnet-beta.solana.com

# ============================================
# API CONFIGURATION
# ============================================
# Jupiter API (automatically uses centralized configuration)
# Override only if you need a custom endpoint
NEXT_PUBLIC_JUPITER_API_URL=https://quote-api.jup.ag

# Pyth Network Hermes endpoint (for price feeds)
# Default: https://hermes.pyth.network
PYTH_HERMES_ENDPOINT=https://hermes.pyth.network

# Jupiter V6 Program ID
NEXT_PUBLIC_JUPITER_V6_PROGRAM_ID=JUP6LkbZbjS1jKKwapdHNy74zcZ3tLUZoi5QNyVTaV4

# ============================================
# ENVIRONMENT & DEPLOYMENT
# ============================================
# NODE_ENV is automatically set by Next.js (development/production)
# VERCEL_ENV is automatically set by Vercel (production/preview/development)
# These variables are used by the centralized API configuration system

# WalletConnect Project ID (Get from https://cloud.walletconnect.com/)
# Required for mobile wallet connections
# Create a free account at https://cloud.walletconnect.com/ to get your project ID
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=YOUR_PROJECT_ID_HERE

# Pyth Network Configuration
PYTH_HERMES_ENDPOINT=https://hermes.pyth.network

# ============================================
# TRADING CONFIGURATION
# ============================================
# Minimum profit threshold in SOL
NEXT_PUBLIC_MINIMUM_PROFIT_SOL=0.005

# Maximum slippage tolerance (0.01 = 1%)
NEXT_PUBLIC_MAX_SLIPPAGE=0.01

# Gas buffer multiplier
NEXT_PUBLIC_GAS_BUFFER=1.5

# ============================================
# SERVER-SIDE ONLY (NOT NEXT_PUBLIC_)
# ============================================
# These variables are only accessible server-side
# DO NOT prefix with NEXT_PUBLIC_ to keep them secure

# Transaction Signing (Server-side only)
TRANSACTION_SIGNING_KEY=your_key_here

# Neynar API (Server-side only)
NEYNAR_API_KEY=your_key_here

# Database (Server-side only)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
