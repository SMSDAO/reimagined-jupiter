{
  "crons": [
    {
      "path": "/api/monitor",
      "schedule": "*/1 * * * *"  // ✅ Good - every minute
    },
    {
      "path": "/api/execute",
      "schedule": "*/5 * * * *"  // ❌ TOO SLOW - should be every 30 seconds
    }
  ],
  "functions": {
    "api/**/*.ts": {
      "runtime": "nodejs18.x",
      "maxDuration": 60,
      "memory": 1024  // ❌ MISSING - add this
    }
  },
  "regions": ["iad1"]  // ❌ MISSING - add US East for Solana proximity
}
